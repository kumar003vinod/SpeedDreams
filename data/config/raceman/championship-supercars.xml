<!DOCTYPE params SYSTEM "params.dtd">

<params name="Supercars Championship" version="1.9">

  <section name="Header">
    <attstr name="name" val="Supercars Championship"/>
    <attstr name="type" val="Championship"/>
    <attstr name="subtype" val="Supercars"/>
    <attstr name="description" val="Supercars Championship"/>
    <attnum name="priority" val="59"/>
    <attstr name="menu image" val="data/img/splash-champ.jpg"/>
    <attstr name="run image" val="data/img/splash-run-practice.jpg"/>
    <attstr name="start image" val="data/img/splash-champstart.jpg"/>
  </section>

  <section name="Tracks">
    <attnum name="maximum number" val="20"/>
    <section name="1">
      <attstr name="name" val="street-1"/>
      <attstr name="category" val="road"/>
    </section>

    <section name="2">
      <attstr name="name" val="inuksuk"/>
      <attstr name="category" val="road"/>
    </section>

    <section name="3">
      <attstr name="name" val="lombaro"/>
      <attstr name="category" val="road"/>
    </section>

    <section name="4">
      <attstr name="name" val="prenzlau"/>
      <attstr name="category" val="road"/>
    </section>

    <section name="5">
      <attstr name="name" val="ole-road-1"/>
      <attstr name="category" val="road"/>
    </section>

    <section name="6">
      <attstr name="name" val="charmey"/>
      <attstr name="category" val="road"/>
    </section>
		
    <section name="7">
      <attstr name="name" val="allondaz"/>
      <attstr name="category" val="road"/>
    </section>
			
    <section name="8">
      <attstr name="name" val="wheel-1"/>
      <attstr name="category" val="road"/>
    </section>
					
    <section name="9">
      <attstr name="name" val="spring"/>
      <attstr name="category" val="road"/>
    </section>	

  </section>

  <section name="Races">
    <section name="1">
      <attstr name="name" val="Qualifications"/>
    </section>

    <section name="2">
      <attstr name="name" val="Race"/>
    </section>
  </section>

  <!-- A fictive race (= session) where to put default parameters values
       which are common to all the normal races (= sessions)  -->
  <section name="All Sessions">
    <attstr name="rain" val="random"/>
    <attstr name="clouds" val="random"/>
    <attstr name="time of day" val="afternoon"/>
  </section>

  <section name="Qualifications">
    <attnum name="laps" val="3"/>
    <attstr name="type" val="qualifications"/>
    <attstr name="starting order" val="drivers list"/>
    <attstr name="display mode" val="results only"/>
    <attstr name="restart" val="no"/>
    <attstr name="display results" val="yes"/>
    <attstr name="must complete" val="yes"/>
    <section name="Starting Grid">
      <attnum name="rows" val="1"/>
      <attnum name="distance to start" val="100"/>
      <attnum name="distance between columns" val="20"/>
      <attnum name="offset within a column" val="10"/>
      <attnum name="initial speed" val="0"/>
      <attnum name="initial height" val="0.2"/>
    </section>

    <section name="Points">
      <section name="1">
        <attnum name="points" val="3"/>
      </section>

      <section name="2">
        <attnum name="points" val="2"/>
      </section>

      <section name="3">
        <attnum name="points" val="1"/>
      </section>

    </section>

  </section>

  <section name="Race">
    <attnum name="distance" unit="km" val="305"/>
    <attstr name="type" val="race"/>
    <attstr name="starting order" val="last race"/>
    <attstr name="restart" val="no"/>
    <attnum name="maximum drivers" val="13"/>
    <attstr name="splash menu" val="yes"/>
    <section name="Starting Grid">
		<attnum name="rows" val="2"/>
		<attnum name="distance to start" val="25"/>
		<attnum name="distance between columns" val="30"/>
		<attnum name="offset within a column" val="10"/>
		<attnum name="initial speed" val="0"/>
		<attnum name="initial height" val="0.2"/>
    </section>

    <section name="Points">
		<section name="1">
			<attnum name="points" val="15"/>
		</section>

		<section name="2">
			<attnum name="points" val="10"/>
		</section>

		<section name="3">
			<attnum name="points" val="8"/>
		</section>

		<section name="4">
			<attnum name="points" val="6"/>
		</section>

		<section name="5">
			<attnum name="points" val="4"/>
		</section>

		<section name="6">
			<attnum name="points" val="3"/>
		</section>

		<section name="7">
			<attnum name="points" val="2"/>
		</section>

		<section name="8">
				<attnum name="points" val="1"/>
			</section>
		</section>
	</section>

	<section name="Drivers">

		<attnum name="maximum number" val="50"/>
		<attnum name="focused idx" val="1"/>
		<attstr name="focused module" val="usr_sc"/>
		<attstr name="rejected types" val="networkhuman"/>
		<attstr name="accepted categories" val="Supercars"/>

		<section name="1">
			<attnum name="idx" val="1"/>
			<attstr name="module" val="simplix_sc"/>
		</section>

		<section name="2">
			<attnum name="idx" val="0"/>
			<attstr name="module" val="simplix_sc"/>
		</section>

		<section name="3">
			<attnum name="idx" val="3"/>
			<attstr name="module" val="usr_sc"/>
		</section>

		<section name="4">
			<attnum name="idx" val="2"/>
			<attstr name="module" val="simplix_sc"/>
		</section>

		<section name="5">
			<attnum name="idx" val="5"/>
			<attstr name="module" val="simplix_sc"/>
		</section>

	<section name="6">
        <attnum name="idx" val="8"/>
		<attstr name="module" val="simplix_sc"/>
    </section>

    <section name="7">
        <attnum name="idx" val="7"/>
		<attstr name="module" val="usr_sc"/>
    </section>

	<section name="8">
        <attnum name="idx" val="11"/>
		<attstr name="module" val="usr_sc"/>
    </section>

    <section name="9">
        <attnum name="idx" val="4"/>
		<attstr name="module" val="usr_sc"/>
    </section>

    <section name="10">
        <attnum name="idx" val="6"/>
		<attstr name="module" val="simplix_sc"/>
    </section>

    <section name="11">
        <attnum name="idx" val="12"/>
		<attstr name="module" val="usr_sc"/>
    </section>

    <section name="12">
        <attnum name="idx" val="9"/>
		<attstr name="module" val="simplix_sc"/>
    </section>

    <section name="13">
		<attnum name="idx" val="5"/>
        <attstr name="module" val="usr_sc"/>
    </section>

    <section name="14">
        <attnum name="idx" val="10"/>
		<attstr name="module" val="usr_sc"/>
    </section>

    <section name="15">
        <attnum name="idx" val="9"/>
		<attstr name="module" val="usr_sc"/>
    </section>

    <section name="16">
        <attnum name="idx" val="6"/>
		<attstr name="module" val="usr_sc"/>
    </section>

    <section name="17">
        <attnum name="idx" val="8"/>
		<attstr name="module" val="usr_sc"/>
    </section>

    <section name="18">
        <attnum name="idx" val="4"/>
		<attstr name="module" val="simplix_sc"/>
    </section>

    <section name="19">
        <attnum name="idx" val="3"/>
		<attstr name="module" val="simplix_sc"/>
    </section>

    <section name="20">
        <attnum name="idx" val="7"/>
		<attstr name="module" val="simplix_sc"/>
    </section>

	<section name="21">
        <attnum name="idx" val="1"/>
		<attstr name="module" val="usr_sc"/>
    </section>

    <section name="22">
        <attnum name="idx" val="2"/>
		<attstr name="module" val="usr_sc"/>
    </section>

    <section name="23">
      <attnum name="idx" val="1"/>
      <attstr name="module" val="human"/>
      <attnum name="extended" val="1"/>
    </section>
  </section>

  <section name="Driver Info">
    <section name="human">
      <section name="1">
        <section name="1">
          <attstr name="car name" val="sc-lynx-220"/>
        </section>
      </section>
    </section>
  </section>

  <section name="Configuration">

    <section name="1">
      <attstr name="type" val="drivers select"/>
    </section>
    <section name="2">
      <attstr name="type" val="race config"/>
      <attstr name="race" val="All Sessions"/>
      <section name="Options">
        <section name="1">
          <attstr name="type" val="time of day"/>
        </section>
        <section name="2">
          <attstr name="type" val="cloud cover"/>
        </section>
        <section name="3">
          <attstr name="type" val="rain fall"/>
        </section>
      </section>
    </section>

  </section>

</params>
