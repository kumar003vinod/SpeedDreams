<!DOCTYPE params SYSTEM "params.dtd">

<params name="LS-GT1 Race" version="1.0">

  <section name="Header">
    <attstr name="name" val="LS-GT1 Challenge"/>
    <attstr name="type" val="Single Event"/>
    <attstr name="subtype" val="LS-GT1 Challenge"/>
    <attstr name="description" val="LS-GT1 Challenge race"/>
    <attnum name="priority" val="66"/>
    <attstr name="menu image" val="data/img/splash-chall.jpg"/>
    <attstr name="run image" val="data/img/splash-run-practice.jpg"/>
    <attstr name="start image" val="data/img/splash-challstart.jpg"/>
  </section>

  <section name="Tracks">
    <attnum name="maximum number" val="1"/>
    <section name="1">
      <attstr name="name" val="espie"/>
      <attstr name="category" val="circuit"/>
    </section>

  </section>

  <section name="Races">
    <section name="1">
      <attstr name="name" val="Free Practice"/>
    </section>

    <section name="2">
      <attstr name="name" val="Q1"/>
    </section>

    <section name="3">
      <attstr name="name" val="Q2"/>
    </section>

    <section name="4">
      <attstr name="name" val="Q3"/>
    </section>

    <section name="5">
      <attstr name="name" val="Qualifying Race"/>
    </section>

    <section name="6">
      <attstr name="name" val="Warm-up"/>
    </section>

    <section name="7">
      <attstr name="name" val="Championship Race"/>
    </section>
  </section>

