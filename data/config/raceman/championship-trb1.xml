<!DOCTYPE params SYSTEM "params.dtd">

<params name="TRB1 Championship" version="1.1">
  <section name="Header">
    <attstr name="name" val="TRB1 Championship"/>
    <attstr name="type" val="Championship"/>
    <attstr name="subtype" val="TRB1"/>
    <attstr name="description" val="TRB1 Championship"/>
    <attnum name="priority" val="58"/>
    <attstr name="menu image" val="data/img/splash-champ.jpg"/>
    <attstr name="run image" val="data/img/splash-run-practice.jpg"/>
    <attstr name="start image" val="data/img/splash-champstart.jpg"/>
  </section>

  <section name="Tracks">
    <attnum name="maximum number" val="20"/>
    <section name="1">
      <attstr name="name" val="forza"/>
      <attstr name="category" val="circuit"/>
    </section>

    <section name="2">
      <attstr name="name" val="aalborg"/>
      <attstr name="category" val="circuit"/>
    </section>

    <section name="3">
      <attstr name="name" val="ruudskogen"/>
      <attstr name="category" val="circuit"/>
    </section>

    <section name="4">
      <attstr name="name" val="chemisay"/>
      <attstr name="category" val="circuit"/>
    </section>

    <section name="5">
      <attstr name="name" val="karwada"/>
      <attstr name="category" val="circuit"/>
    </section>

    <section name="6">
      <attstr name="name" val="brondehach"/>
      <attstr name="category" val="circuit"/>
    </section>
	
	<section name="7">
      <attstr name="name" val="espie"/>
      <attstr name="category" val="circuit"/>
    </section>
	
	<section name="8">
      <attstr name="name" val="corkscrew"/>
      <attstr name="category" val="circuit"/>
    </section>
  </section>

  <section name="Races">
    <section name="1">
      <attstr name="name" val="Qualifications Q1"/>
    </section>

    <section name="2">
      <attstr name="name" val="Qualifications Q2"/>
    </section>

    <section name="3">
      <attstr name="name" val="Race"/>
    </section>
  </section>

  <!-- A fictive race (= session) where to put default parameters values
       which are common to all the normal races (= sessions)  -->
  <section name="All Sessions">
    <attstr name="rain" val="random"/>
    <attstr name="clouds" val="random"/>
    <attstr name="time of day" val="from track"/>
  </section>

  <section name="Qualifications Q1">
    <attnum name="laps" val="3"/>
    <attstr name="type" val="qualifications"/>
    <attstr name="starting order" val="drivers list"/>
    <attstr name="display mode" val="results only"/>
    <attstr name="restart" val="no"/>
    <attstr name="display results" val="yes"/>
    <attstr name="must complete" val="yes"/>
    <section name="Starting Grid">
      <attnum name="rows" val="1"/>
      <attnum name="distance to start" val="100"/>
      <attnum name="distance between columns" val="20"/>
      <attnum name="offset within a column" val="10"/>
      <attnum name="initial speed" val="0"/>
      <attnum name="initial height" val="0.2"/>
    </section>

    <section name="Points">
      <section name="1">
        <attnum name="points" val="3"/>
      </section>

      <section name="2">
        <attnum name="points" val="2"/>
      </section>

      <section name="3">
        <attnum name="points" val="1"/>
      </section>
    </section>
  </section>

  <section name="Qualifications Q2">
    <attnum name="laps" val="6"/>
    <attstr name="type" val="qualifications"/>
    <attstr name="starting order" val="last race"/>
    <attstr name="display mode" val="results only"/>
    <attstr name="restart" val="no"/>
    <attnum name="maximum drivers" val="12"/>
    <attstr name="display results" val="yes"/>
    <attstr name="must complete" val="yes"/>
    <section name="Starting Grid">
      <attnum name="rows" val="1"/>
      <attnum name="distance to start" val="100"/>
      <attnum name="distance between columns" val="20"/>
      <attnum name="offset within a column" val="10"/>
      <attnum name="initial speed" val="0"/>
      <attnum name="initial height" val="0.2"/>
    </section>

    <section name="Points">
      <section name="1">
        <attnum name="points" val="10"/>
      </section>

      <section name="2">
        <attnum name="points" val="9"/>
      </section>

      <section name="3">
        <attnum name="points" val="8"/>
      </section>

      <section name="4">
        <attnum name="points" val="6"/>
      </section>

      <section name="5">
        <attnum name="points" val="4"/>
      </section>

      <section name="6">
        <attnum name="points" val="3"/>
      </section>

      <section name="7">
        <attnum name="points" val="2"/>
      </section>

      <section name="8">
        <attnum name="points" val="1"/>
      </section>
    </section>
  </section>

  <section name="Race">
    <attnum name="distance" unit="km" val="150"/>
    <attstr name="type" val="race"/>
    <attstr name="starting order" val="last race"/>
    <attstr name="restart" val="no"/>
    <attnum name="maximum drivers" val="10"/>
    <attstr name="splash menu" val="yes"/>
    <section name="Starting Grid">
      <attnum name="rows" val="2"/>
      <attnum name="distance to start" val="25"/>
      <attnum name="distance between columns" val="30"/>
      <attnum name="offset within a column" val="10"/>
      <attnum name="initial speed" val="0"/>
      <attnum name="initial height" val="0.2"/>
    </section>

    <section name="Points">
      <section name="1">
        <attnum name="points" val="15"/>
      </section>

      <section name="2">
        <attnum name="points" val="10"/>
      </section>

      <section name="3">
        <attnum name="points" val="8"/>
      </section>

      <section name="4">
        <attnum name="points" val="6"/>
      </section>

      <section name="5">
        <attnum name="points" val="4"/>
      </section>

      <section name="6">
        <attnum name="points" val="3"/>
      </section>

      <section name="7">
        <attnum name="points" val="2"/>
      </section>

      <section name="8">
        <attnum name="points" val="1"/>
      </section>
    </section>
  </section>

  <section name="Drivers">

    <attnum name="maximum number" val="50"/>
    <attnum name="focused idx" val="1"/>
    <attstr name="focused module" val="simplix_trb1"/>
    <attstr name="rejected types" val="networkhuman"/>
    <attstr name="accepted categories" val="TRB1"/>

    <section name="1">
      <attnum name="idx" val="1"/>
      <attstr name="module" val="simplix_trb1"/>
    </section>

    <section name="2">
      <attnum name="idx" val="3"/>
      <attstr name="module" val="simplix_trb1"/>
    </section>

    <section name="3">
      <attnum name="idx" val="2"/>
      <attstr name="module" val="simplix_trb1"/>
    </section>

    <section name="4">
      <attnum name="idx" val="4"/>
      <attstr name="module" val="simplix_trb1"/>
    </section>

    <section name="5">
      <attnum name="idx" val="6"/>
      <attstr name="module" val="simplix_trb1"/>
    </section>

    <section name="6">
      <attnum name="idx" val="5"/>
      <attstr name="module" val="simplix_trb1"/>
    </section>

    <section name="7">
      <attnum name="idx" val="7"/>
      <attstr name="module" val="simplix_trb1"/>
    </section>

    <section name="8">
      <attnum name="idx" val="8"/>
      <attstr name="module" val="simplix_trb1"/>
    </section>

    <section name="9">
      <attnum name="idx" val="10"/>
      <attstr name="module" val="simplix_trb1"/>
    </section>

    <section name="10">
      <attnum name="idx" val="9"/>
      <attstr name="module" val="simplix_trb1"/>
    </section>
	
	<section name="11">
      <attnum name="idx" val="11"/>
      <attstr name="module" val="simplix_trb1"/>
    </section>

    <section name="12">
      <attnum name="idx" val="12"/>
      <attstr name="module" val="simplix_trb1"/>
    </section>

    <section name="13">
      <attnum name="idx" val="14"/>
      <attstr name="module" val="simplix_trb1"/>
    </section>

    <section name="14">
      <attnum name="idx" val="13"/>
      <attstr name="module" val="simplix_trb1"/>
    </section>

    <section name="15">
      <attnum name="idx" val="15"/>
      <attstr name="module" val="simplix_trb1"/>
    </section>

    <section name="16">
      <attnum name="idx" val="0"/>
      <attstr name="module" val="simplix_trb1"/>
    </section>

    <section name="17">
      <attnum name="idx" val="1"/>
      <attstr name="module" val="human"/>
      <attnum name="extended" val="1"/>
    </section>
  </section>

  <section name="Driver Info">
    <section name="human">
      <section name="1">
        <section name="1">
          <attstr name="car name" val="trb1-cavallo-360rb"/>
        </section>
      </section>
    </section>
  </section>

  <section name="Configuration">
    <section name="1">
      <attstr name="type" val="drivers select"/>
    </section>
    <section name="2">
      <attstr name="type" val="race config"/>
      <attstr name="race" val="All Sessions"/>
      <section name="Options">
        <section name="1">
          <attstr name="type" val="time of day"/>
        </section>
        <section name="2">
          <attstr name="type" val="cloud cover"/>
        </section>
        <section name="3">
          <attstr name="type" val="rain fall"/>
        </section>
      </section>
    </section>
  </section>
</params>
