<!DOCTYPE params SYSTEM "../libs/tgf/params.dtd">

<params name="Supercars Championship %A" type="param" mode="mw" version="1.5">

  <section name="Header">
    <attform name="name" val="#Supercars Championship # + toAlpha(number)"/>
    <attform name="description" val="#Supercars Championship # + toAlpha(number)"/>
    <attnum name="priority" val="30"/>
    <attstr name="menu image" val="data/img/splash-career.jpg"/>
    <attstr name="run image" val="data/img/splash-run-practice.jpg"/>
    <attstr name="start image" val="data/img/splash-career.jpg"/>
    <section name="Subfiles">
      <attstr name="is subfile" val="yes" />
      <attstr name="suffix" val="supercars" />
      <attstr name="parent file" val="career.xml" />
      <attstr name="next subfile" val="career_ls1.xmls" />
      <attstr name="next suffix" val="ls1" />
      <attstr name="islast" val="no" />
    </section>
  </section>

  <section name="Tracks">
    <attnum name="maximum number" val="20"/>

    <section name="1">
      <attstr name="name" val="pinabashi"/>
      <attstr name="category" val="road"/>
    </section>
    <section name="2">
      <attstr name="name" val="chemisay"/>
      <attstr name="category" val="road"/>
    </section>
    <section name="3">
      <attstr name="name" val="e-track-4"/>
