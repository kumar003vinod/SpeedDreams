<!DOCTYPE params SYSTEM "params.dtd">

<params name="36GP Race" version="1.0">

  <section name="Header">
    <attstr name="name" val="36GP Championship"/>
    <attstr name="type" val="Championship"/>
    <attstr name="subtype" val="36GP"/>
    <attstr name="description" val="36GP Championship season"/>
    <attnum name="priority" val="57"/>
    <attstr name="menu image" val="data/img/splash-champ.jpg"/>
    <attstr name="run image" val="data/img/splash-run-practice.jpg"/>
    <attstr name="start image" val="data/img/splash-champstart.jpg"/>
  </section>

  <section name="Tracks">
    <attnum name="maximum number" val="10"/>
    <section name="1">
      <attstr name="name" val="charmey"/>
      <attstr name="category" val="road"/>
    </section>

    <section name="2">
      <attstr name="name" val="chemisay"/>
      <attstr name="category" val="circuit"/>
    </section>

    <section name="3">
      <attstr name="name" val="prenzlau"/>
      <attstr name="category" val="road"/>
    </section>

    <section name="4">
      <attstr name="name" val="allondaz"/>
      <attstr name="category" val="road"/>
    </section>

    <section name="5">
      <attstr name="name" val="forza"/>
      <attstr name="category" val="circuit"/>
    </section>

  </section>

  <section name="Races">
    <section name="1">
      <attstr name="name" val="Qualifying"/>
    </section>

    <section name="2">
      <attstr name="name" val="Race"/>
    </section>
  </section>

  <!-- A fictive race (= session) where to put default parameter values
       which are common to all the normal races (= sessions)  -->
  <section name="All Sessions">
    <attstr name="rain" val="random"/>
    <attstr name="clouds" val="scarce clouds"/>
  </section>

  <section name="Qualifying">
    <attnum name="sessiontime" unit="s" val="3600"/>
    <attnum name="laps" val="0"/>
    <attnum name="distance" unit="km" val="60"/>
    <attstr name="type" val="qualifications"/>
    <attstr name="starting order" val="drivers list"/>
    <attstr name="display mode" val="results only"/>
    <attstr name="restart" val="no"/>
    <attstr name="display results" val="yes"/>
    <attstr name="must complete" val="no"/>
    <attstr name="time of day" val="afternoon"/>
    <attstr name="rain" val="random"/>
    <attstr name="clouds" val="scarce clouds"/>
    <section name="Starting Grid">
      <attnum name="rows" val="1"/>
      <attnum name="distance to start" val="100"/>
      <attnum name="distance between columns" val="100"/>
      <attnum name="offset within a column" val="10"/>
      <attnum name="initial speed" val="0"/>
      <attnum name="initial height" val="0.2"/>
    </section>

  </section>

  <section name="Race">
    <attnum name="laps" val="0"/>
    <attnum name="distance" unit="km" val="500"/>
    <attstr name="type" val="race"/>
    <attstr name="starting order" val="Qualifying"/>
    <attstr name="restart" val="no"/>
    <attnum name="maximum drivers" val="25"/>
    <attstr name="splash menu" val="yes"/>
    <attstr name="time of day" val="afternoon"/>
    <attstr name="rain" val="random"/>
    <attstr name="clouds" val="scarce clouds"/>
    <section name="Starting Grid">
      <attnum name="rows" val="2"/>
      <attnum name="distance to start" val="1"/>
      <attnum name="distance between columns" val="16"/>
      <attnum name="offset within a column" val="8"/>
      <attnum name="initial speed" val="0"/>
      <attnum name="initial height" val="0.2"/>
    </section>

<!-- Point system recalculated to one which can be used for Speed Dreams based on
     http://www.kolumbus.fi/leif.snellman/poi.htm -->
    <section name="Points">
      <section name="1">
        <attnum name="points" val="7"/>
      </section>

      <section name="2">
        <attnum name="points" val="6"/>
      </section>

      <section name="3">
        <attnum name="points" val="5"/>
      </section>

      <section name="4">
        <attnum name="points" val="4"/>
      </section>

      <section name="5">
        <attnum name="points" val="4"/>
      </section>

      <section name="6">
        <attnum name="points" val="4"/>
      </section>

      <section name="7">
        <attnum name="points" val="4"/>
      </section>

      <section name="8">
        <attnum name="points" val="4"/>
      </section>

      <section name="9">
        <attnum name="points" val="4"/>
      </section>

      <section name="10">
        <attnum name="points" val="3"/>
      </section>

      <section name="11">
        <attnum name="points" val="3"/>
      </section>

      <section name="12">
        <attnum name="points" val="2"/>
      </section>

      <section name="13">
        <attnum name="points" val="2"/>
      </section>

      <section name="14">
        <attnum name="points" val="1"/>
      </section>

      <section name="15">
        <attnum name="points" val="1"/>
      </section>
      
      <section name="16">
        <attnum name="points" val="1"/>
      </section>  
    </section>

  </section>

  <section name="Drivers">

    <attnum name="maximum number" val="30"/>
    <attstr name="focused module" val="human"/>
    <attnum name="focused idx" val="3"/>
    <attstr name="rejected types" val="networkhuman"/>
    <attstr name="accepted categories" val="36GP"/>

    <section name="1">
      <attnum name="idx" val="0"/>
      <attstr name="module" val="simplix_36GP"/>
    </section>

    <section name="2">
      <attnum name="idx" val="3"/>
      <attstr name="module" val="usr_36GP"/>
    </section>

    <section name="3">
      <attnum name="idx" val="1"/>
      <attstr name="module" val="usr_36GP"/>
    </section>

    <section name="4">
      <attnum name="idx" val="4"/>
      <attstr name="module" val="simplix_36GP"/>
    </section>

    <section name="5">
      <attnum name="idx" val="8"/>
      <attstr name="module" val="simplix_36GP"/>
    </section>

    <section name="6">
      <attnum name="idx" val="8"/>
      <attstr name="module" val="usr_36GP"/>
    </section>

    <section name="7">
      <attnum name="idx" val="1"/>
      <attstr name="module" val="human"/>
    </section>

  </section>

  <section name="Configuration">
    <attnum name="current configuration" val="3"/>
    <section name="1">
      <attstr name="type" val="drivers select"/>
    </section>

    <section name="2">
      <attstr name="type" val="race config"/>
      <attstr name="race" val="Qualifying"/>
      <section name="Options">
        <section name="1">
          <attstr name="type" val="race length"/>
        </section>
        <section name="2">
          <attstr name="type" val="cloud cover"/>
        </section>
        <section name="3">
          <attstr name="type" val="rain fall"/>
        </section>
      </section>
    </section>

    <section name="3">
      <attstr name="type" val="race config"/>
      <attstr name="race" val="Race"/>
      <section name="Options">
        <section name="1">
          <attstr name="type" val="race length"/>
        </section>
        <section name="2">
          <attstr name="type" val="cloud cover"/>
        </section>
        <section name="3">
          <attstr name="type" val="rain fall"/>
        </section>
      </section>
    </section>

  </section>

</params>
